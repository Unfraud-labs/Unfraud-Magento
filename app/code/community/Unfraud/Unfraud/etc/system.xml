<?xml version="1.0" ?>
<config>
    <tabs>
        <unfraud_tab module="unfraud" translate="label">
            <label>Unfraud.com</label>
            <sort_order>100</sort_order>
        </unfraud_tab>
    </tabs>
    <sections>
        <unfraud_section module="unfraud" translate="label">
            <label>Settings</label>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <tab>unfraud_tab</tab>
            <groups>
                <unfraud_group translate="label" module="unfraud">
                    <label>Unfraud.com</label>
                    <comment>Please, insert you login credentials and the API KEY</comment>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <threshold_field translate="label tooltip comment">
                            <label>Threshold</label>
                            <comment>Fraud Threshold (0.0 to 100.0, empty to disable).</comment>
                            <tooltip>Fraud Threshold (0.0 to 100.0, empty to disable).</tooltip>
                            <show_in_default>1</show_in_default>
                            <frontend_type>text</frontend_type>
                        </threshold_field>
                        <apikey_field translate="label tooltip comment">
                            <label>API KEY</label>
                            <comment>Your e-commerce API KEY</comment>
                            <tooltip>Insert the API KEY associated to your e-commerce website</tooltip>
                            <show_in_default>1</show_in_default>
                            <frontend_type>text</frontend_type>
                        </apikey_field>
                       <pwd_field translate="label tooltip comment">
                            <label>Password</label>
                            <comment>Your password</comment>
                            <tooltip>Insert the password used for Unfraud.com login</tooltip>
                            <show_in_default>1</show_in_default>
                            <frontend_type>password</frontend_type>
                        </pwd_field>
                        <email_field translate="label tooltip comment">
                            <label>E-Mail</label>
                            <comment>Your e-mail address</comment>
                            <tooltip>Insert the e-mail used for Unfraud.com login</tooltip>
                            <show_in_default>1</show_in_default>
                            <frontend_type>text</frontend_type>
                        </email_field>
                    </fields>
                </unfraud_group>
            </groups>
        </unfraud_section>
    </sections>
</config>